source 'https://rubygems.org'

ruby '2.2.5'

gem 'rails'
gem 'soup'
gem 'kramdown'
gem 'airbrake', '~> 5'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

group :development do
  gem 'dotenv-rails'
  gem 'recap'
  gem 'timecop'
end

group :development, :test do
  gem 'rspec-rails'
end
