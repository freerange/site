@import "_reset";

/*
  Master styles for application.
*/

/* Global Variables */
$font_family: "ff-tisa-web-pro-1","ff-tisa-web-pro-2",serif;
$link_hover: #db4a1d;
/* body style */

body {
  color: #444;
  font-family: $font_family;
  font-size: 62.5%;
}

/* links */

a {
  color: #990057;
  font-weight: bold;
  text-decoration: none;
}

a:link, a:visited {
  outline: none;
}

a:hover, a:active {
  color: $link_hover;
}


/* page structure
--------------------------------------------- */

body {
  background: #fdfffb url(<%= asset_path 'bg_w.jpg' %>) top fixed no-repeat;
}


$page_width: 60em;

#page {
  padding: 2em;
  margin: 0;
  position: relative;
  margin: 0 auto;
  max-width: $page_width;
}

/* header
--------------------------------------------- */

#header {

  /* logo */
  h1 {
    height: 229px;
    position: relative;
    width: 90%;
    padding-top: 3.2em;
    padding-bottom: 0;
    margin: 0 auto;

    a {
      display: block;
      background: url(<%= asset_path 'logo.png' %>) no-repeat 0 0;
      text-indent: -9999px;
      width: 291px;
      height: 229px;
      margin: 0;
      padding: 0;
    }

    a:hover {
      opacity: 0.8;
    }
  }

}

/* navigation */

ul.nav {

  padding: 0;
  width: 100%;
  top: 0;
  max-width: $page_width + 15em;

  li {
    p {
      color: #777;
      font-family: "Times New Roman", Times, serif;
      font-style: italic;
      font-size: 1.2em;
      line-height: 3.4em;
      a {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        color: #555;
        font-style: normal;
      }

      a:hover {
        color: $link_hover;
      }
    }
  }

  li#link_blog {
    background: #f8faf6;
    background-color: rgba(248,250,246,0.9);
    float: right;
    padding: 0 2.5em;
    border-bottom: 1px solid #fff;
  }

}

/* main styles
--------------------------------------------- */

#content {
  padding-top: 3.1em;

  h2 {
    font-size: 3em;
    line-height: 1.45em;
    text-align: center;
    font-family: "museo-slab-1","museo-slab-2";
    font-weight: 100;
    padding-top: 0.95em;
    padding-bottom: 0.4em;
  }

  h2#tag {
    font-size: 3em;
    line-height: 1.68em;
    color: #222;
    font-weight: normal;
    width: 90%;
    padding-bottom: 1.45em;
    padding-top: 0;
    margin: 0 auto;
    text-align: center;
    font-family: "ff-tisa-web-pro-1","ff-tisa-web-pro-2",serif;
  }

  h3 {
    font-size: 2em;
    line-height: 1.4em;
  }

  h4 {
    font-size: 1.8em;
    line-height: 1.6em;
  }

  ul {
    list-style: disc;
  }

  p {
    font-size: 1.6em;
    line-height: 1.6em;
    padding-bottom: 1.6em;
  }

  h2 + p {
    padding-top: 0.3em;
  }

  sup {
    font-size: 0.6em;
    vertial-align: super;
  }

  .footnotes {
    font-size: 0.8em;
    padding-top: 0.6em;
    border-top: 1px solid #F8FAF6;
  }

  #ethos {
    .idea {
      h3 {
        padding-top: 1.15em;
      }
      ul {
        padding-top: 2.4em;
      }
    }
  }

  ol#project-list {
    padding-bottom: 0.2em;
    li {
      margin-bottom: 2.2em;
    }
  }

  ol#team {
    padding-top: 2.1em;
    padding-bottom: 0.2em;
    li.member {
      padding-bottom: 2.1em;

      img {
        float: left;
        width: 25%;
        display: block;
        padding: 10px;
        background: #fff;
        border: 1px solid #999;
        margin-top: 0.8em;
      }

      .info {
        float: right;
        width: 65%;

        h3 {
          padding-bottom: 0em;
        }

        p.links {
          padding-bottom: 1.9em;
        }

        p {
          font-size: 1.4em;
          line-height: 1.8em;
          padding-bottom: 1.8em;
        }
      }
    }
  }

  .vcard {
    p {
      padding-bottom: 0;
    }
  }

  #contact {
    em {
      font-weight: bold;
    }

    h3 {
      padding-bottom: 0.05em;
    }

    #working-together {
      width: 50%;
      float: left;
      margin-right: 1.5em;
      padding-top: 0.1em;
      p {
        font-size: 14px;
        line-height: 1.8em;
      }

      ul {
        padding-top: 0.3em;
        li {
          padding-bottom: 0;

          p {
            padding-bottom: 1.8em;
          }
        }
      }
    }

    #contact-sidebar {
      width: 40%;
      float: right;
      padding-top: 0.2em;

      p {
        font-size: 14px;
        line-height: 1.8em;
      }

      .vcard {
        padding-top: .3em;
      }

      .contact-methods {
        padding-top: 1.8em;

        p {
          padding-bottom: 0
        }
      }
    }
  }

  p#company-info {
    font-size: 0.9em;
    color: #999;
    line-height: 2em;
  }
}

