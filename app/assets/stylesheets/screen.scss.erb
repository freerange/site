body.blog, body.wiki {
  background: #fff;
  padding: 0;

  $max_page_width: 102.5em;

  #page {
    padding: 0;
    margin: 0 auto;
    max-width: $max_page_width;
    min-width: 0;
    width: 100%;
    position: relative;

    #header {

      ul#blog_nav {
        background: #222;
        background-color: rgba(34,34,34,0.9);
        padding: 0;
        border-bottom: 1px solid #fff;
        max-width: $max_page_width;
        width: 100%;

        li {
          p {
            color: #e6e6e6;
            font-family: "Times New Roman", Times, serif;
            font-style: italic;
            font-size: 1.2em;
            line-height: 3.4em;
            a {
              font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
              color: #e6e6e6;
              font-style: normal;
            }

            a:hover {
              color: $link_hover;
            }
          }
        }

        li#link_home {
          float: left;
          padding-left: 2.5em;
        }

        li#link_rss {
          float: right;
          padding-right: 2.5em;
        }
      }

      /* logo */
      h1 {
        height: 229px;
        width: 316px;
        padding: 4em 0 0 0;
        margin: 0;

        a {
          display: block;
          background: url(<%= asset_path 'logo_blog.png' %>) no-repeat 0 0;
          text-indent: -9999px;
          width: 316px;
          height: 217px;
          margin: 0;
          padding: 0;
          opacity: 0.7;

          -moz-transition : opacity .25s 0 linear;
          -o-transition : opacity .25s 0 linear;
          -webkit-transition : opacity .25s 0 linear;
          transition : opacity .25s 0 linear;
        }

        a:hover {
          opacity: 1;
        }
      }
    }

    #content {
      padding: 1.4em 2.5em 0 2.5em;

      #show-and-tell-slack-channel {
        float: left;

        .flash-notice {
          color: #155724;
          background-color: #d4edda;
          border-color: #c3e6cb;
          margin-bottom: 0.7rem;
          padding: 0.3rem;
          border: 1px solid;
        }

        .flash-alert {
          color: #721c24;
          background-color: #f8d7da;
          border-color: #f5c6cb;
          margin-bottom: 0.7rem;
          padding: 0.3rem;
          border: 1px solid;
        }

        form#slack-invitation {
          fieldset {
            padding-top: 8px;
          }

          input, button {
            font-size: 14px;
            margin-top: 4px;
          }

          button {
            padding: 2px 4px 2px 4px;
            margin-left: 8px;
          }
        }
      }

      .blog_entry {

        p.article_date {
          text-transform: uppercase;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
          border-bottom: 1px solid #e3e1e2;
          font-size: 1em;
          font-weight: bold;
          letter-spacing: 1px;
          line-height: 2.5em;
          margin-bottom: 5em;
        }

        .content {
          padding-top: 0.7em;

          img {
            max-width: 100%;
          }
        }

        .author {
          float: right;
          min-width: 75px;
          margin-left: 2.5em;
          span {
            font-size: 1em;
            text-transform: uppercase;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            color: #333;
            font-weight: bold;
            display: block;
            line-height: 4.3em;
          }

          img {
            width: 75px;
            height: 75px;
            display: block;
          }
        }

        .footnotes {
          padding-top: 3em;
          margin-top: 2em;
          border-top: 1px solid #e3e1e2;
          font-size: 90%;
        }
      }

      h1 {
        font-size: 4em;
        line-height: 1.27em;
        padding: 1px 0 1.2em 0;
      }

      h2 {
        font-family: "ff-tisa-web-pro-1","ff-tisa-web-pro-2",serif;
        text-align: left;
        font-weight: bold;
        padding-top: 0.85em;
        line-height: 1.55em;
      }

      h3 {
        padding: 0;
      }

      p + h3 {
        line-height: 1em;
        padding-bottom: 0.2em;
      }

      p + h4 {
        line-height: 1.3em;
        padding-bottom: 0.15em;
      }

      h5 {
        font-size: 1.6em;
        line-height: 1.5em;
        padding-bottom: 0.1em;
      }

      p {
        padding-bottom: 1.6em;
      }

      ol {
        list-style: decimal;
      }

      ul, ol {
        padding-top: 0em;
        padding-bottom: 2.7em;
        padding-left: 2.2em;

        li {
          font-size: 1.5em;
          line-height: 1.7em;

          h1 {
            font-size: 2.2em;
            padding: 0 0 0.45em 0;
            margin: 0;
            line-height: 1.9em;
          }

          h2 {
            font-size: 2em;
            padding: 0 0 0.2em 0;
            line-height: 2.2em;
          }

          h3 {
            font-size: 1.5em;
            padding: 0 0 0em 0;
            line-height: 1em;
          }

          h4 {
            font-size: 1.2em;
            line-height: 1em;
            padding: 0;
          }

          h5 {
            font-size: 1em;
            line-height: 1.7em;
            padding-bottom: 0;
          }

          p {
            font-size: 1em;
            line-height: 1.7em;
          }
        }
      }

      blockquote {
        color: #444;
        font-size: 1.8em;
        font-style: italic;
        line-height: 1.25em;
        padding-left: 1.8em;

        p {
          font-size: 1em;
        }
      }

      p {
        blockquote {
          font-size: 1em;
        }
      }

      pre {
        overflow-x: scroll;
      }

      pre, code {
        background: #fff;
        border: 1px solid #eee;
      }

      pre {
        padding: 1.4em;
        margin-bottom: 2.6em;
        font-size: 1.4em;
        line-height: 2em;
        display: block;
      }

      code {
        margin-bottom: 1.4em;
      }

      pre code {
        font-size: 1.4em;
        line-height: 1.4em;
        background: transparent;
        border: none;
        padding: 0;
        display: inline;
      }

      p code {
        font-size: 1em;
        padding: 0.3em;
      }

      sup {
        font-size: x-small;
        vertical-align: super;
      }

      #blog_articles {
        h2 {
          margin: 0 0 1.15em 0;
          padding: 0 0 0.35em 0;
          border-bottom: 1px solid #333;
        }

        ol.blog_list {
          padding: 1.5em 0 0 2.5em;
          margin: 0;
          list-style-type: disc;

          li {
            padding: 0 0 1.7em 0;

            a {
              display: block;
              padding: 0 0;
              font-size: 1.2em;
              line-height: 1em;
            }

            a:hover, a:active {

            }
          }

          li:hover {

          }

          li:last-child {
          }

        }

      }

      p.colophon {
        clear:both;
      }

      img.left {
        float: left;
        padding-top: 0.5em;
        padding-right: 1em;
      }

      .twitter-tweet-rendered {
        margin-bottom: 2.4em !important;
      }

    } // #content

    .comments {
      margin-top: 4em;
    }

  }

}

@media only screen and (min-width: 850px) {

  body.blog {
    #page {
      #header {
        ul#blog_nav {
          li#link_rss {
            width: 12.5em;
          }
        }

        h1 {
          height: 229px;
          width: 316px;
          padding: 0;
          margin: 4em 0 0 -30px;
          float: left;
        }
      }

      #content {
        padding: 0;

        .blog_entry {
          float: right;
          margin-top: -18.6em;
          width: 70.8%;

          p.article_date {
            margin-bottom: 5em;
          }

          .author {
            width: 20.8%;
            margin-left: 2.5em;
          }

          .content {
            width: 75.9%;
            padding-top: 0.6em;
          }
        }

        #blog_articles {
          float: right;
          margin-top: -18.6em;
          width: 70.8%;
        }

        #article_links {
          margin-top: 0.5em;
          width: 19.5%;
          padding: 2em 2.5em 2em 2.5em;
          background: #fff;
          border: 1px solid #dcdcdc;
          float: left;

          h3 {
            text-transform: uppercase;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            color: #ddd;
            letter-spacing: 1px;
            font-size: 2.9em;
            line-height: 1.3em;
            padding-bottom: 0;
          }

          /* Make the 'R' of recent sit on the grid line */
          h3:first-child {
            margin-left: -3px;
          }

          #recent_articles {
            padding-left: 0.65em;
          }

          ol {
            list-style-image: url(<%= asset_path 'list-bullet.png' %>);
            padding: 0 0 0 0.65em;
            padding-bottom: 2.1em;
            li {
              padding: 0;
              line-height: 1.5em;
            }
            a {
              font-size: 0.8em;
              font-family: "Times New Roman", Times, serif;
              font-style: italic;
              color: #333;
              font-weight: normal;
            }

            a:hover, a:active {
              color: $link_hover;
            }
          }

        }
      }
    }
  }
}

